<%- include('../header') %>

<style>
    :root {
        --glass-bg: rgba(255, 255, 255, 0.9);
        --primary-gradient: linear-gradient(135deg, #0f172a 0%, #334155 100%);
        --accent-gold: #c5a059;
    }

    .profile-container {
        background-color: #f8fafc;
        min-height: 100vh;
        padding: 40px 20px;
    }

    /* Top Premium Banner */
    .profile-hero {
        background: var(--primary-gradient);
        height: 220px;
        border-radius: 30px;
        position: relative;
        margin-bottom: 80px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    /* Main Card */
    .profile-main-card {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border-radius: 25px;
        border: 1px solid rgba(255,255,255,0.3);
        margin-top: -100px;
        padding: 40px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.05);
    }

    .profile-img-lg {
        width: 160px;
        height: 160px;
        border-radius: 30px; /* Rounded corner look for modern feel */
        object-fit: cover;
        border: 6px solid #fff;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        background: white;
    }

    .admin-badge {
        background: #e0f2fe;
        color: #0369a1;
        font-weight: 800;
        font-size: 10px;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        padding: 6px 16px;
        border-radius: 100px;
    }

    /* Info Tiles */
    .info-tile {
        background: #fff;
        border: 1px solid #f1f5f9;
        padding: 22px;
        border-radius: 20px;
        transition: 0.3s;
    }

    .info-tile:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.03);
    }

    .label-text {
        font-size: 11px;
        font-weight: 700;
        color: #94a3b8;
        text-transform: uppercase;
        margin-bottom: 6px;
    }

    .value-text {
        font-size: 15px;
        font-weight: 700;
        color: #1e293b;
    }

    .edit-btn {
        background: var(--primary-gradient);
        color: white;
        border-radius: 14px;
        padding: 12px 28px;
        font-weight: 600;
        transition: 0.3s;
        border: none;
    }

    .edit-btn:hover {
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(15, 23, 42, 0.2);
    }

    .progress-custom {
        height: 8px;
        background: #e2e8f0;
        border-radius: 10px;
    }

    .progress-custom .progress-bar {
        background: linear-gradient(to right, #0f172a, #334155);
    }

    .extra-small { font-size: 11px; }
    .mt-n5 { margin-top: -90px !important; }
</style>

<div class="profile-container">
    <div class="container">
        <div class="profile-hero"></div>

        <div class="row justify-content-center">
            <div class="col-lg-11">
                <div class="profile-main-card">
                    <div class="row">
                        <div class="col-lg-4 text-center border-end border-light pr-lg-4">
                            <div class="mt-n5 position-relative">
                                <img src="/<%= admin.profile_image %>" class="profile-img-lg mb-3">
                            </div>
                            <h3 class="fw-bold text-dark mb-1"><%= admin.fname %> <%= admin.lname %></h3>
                            <p class="text-muted small mb-4"><%= admin.email %></p>
                            <span class="admin-badge">Premium Administrator</span>
                            
                            <div class="mt-5 text-start px-2">
                                <h6 class="fw-bold small text-uppercase text-dark mb-2">About Executive</h6>
                                <p class="text-muted small" style="line-height: 1.7;">
                                    <%= admin.about || "Executive profile summary is empty. Update your professional biography in settings." %>
                                </p>
                            </div>

                            <div class="mt-4 px-2 text-start">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="small fw-bold">Profile Integrity</span>
                                    <span class="small fw-bold">92%</span>
                                </div>
                                <div class="progress progress-custom">
                                    <div class="progress-bar" style="width: 92%"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8 ps-lg-5">
                            <div class="d-flex justify-content-between align-items-center mb-5 mt-2">
                                <h5 class="fw-bold m-0"><i class="mdi mdi-account-circle-outline mr-2"></i> Account Details</h5>
                                <a href="/editAdmin/<%= admin.id %>" class="btn edit-btn">
                                    <i class="mdi mdi-account-edit-outline mr-1"></i> Edit Profile
                                </a>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6 mb-4">
                                    <div class="info-tile">
                                        <div class="label-text">Official Designation</div>
                                        <div class="value-text">System Administrator</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="info-tile">
                                        <div class="label-text">Contact Link</div>
                                        <div class="value-text">+91 <%= admin.phone %></div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="info-tile">
                                        <div class="label-text">Gender / Personal</div>
                                        <div class="value-text text-capitalize"><%= admin.gender %></div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="info-tile">
                                        <div class="label-text">Operational Base</div>
                                        <div class="value-text text-capitalize"><%= admin.city %></div>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-4">
                                <h6 class="fw-bold mb-4">Security Activity</h6>
                                <div class="d-flex align-items-center mb-3 p-3 bg-white border rounded-4 shadow-sm">
                                    <div class="bg-light p-2 rounded mr-3">
                                        <i class="mdi mdi-clock-check text-primary"></i>
                                    </div>
                                    <div>
                                        <p class="m-0 small fw-bold">Verified Last Session</p>
                                        <p class="m-0 extra-small text-muted">Active now â€¢ IP Address Hidden for Security</p>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-5 pt-3 text-center border-top">
                                <a href="/changepassword" class="text-secondary small fw-bold text-decoration-none">
                                    <i class="mdi mdi-lock-outline mr-1"></i> Security: Update Authentication Password
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>