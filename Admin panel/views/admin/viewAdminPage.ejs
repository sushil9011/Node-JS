<%- include('../header') %>

<style>
    :root {
        --luxury-gold: #c5a059;
        --luxury-dark: #1a1a1a;
        --luxury-bg: #f4f7fa; /* Updated for cleaner look */
    }

    .page-wrapper {
        background: var(--luxury-bg);
        min-height: 100vh;
        padding: 30px 20px;
        font-family: 'Inter', sans-serif;
    }

    /* Action Buttons - Professional & Simple */
    .action-group {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-action-custom {
        padding: 8px 16px;
        border-radius: 10px;
        font-size: 13px;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: 0.3s;
        border: 1px solid #e2e8f0;
        text-decoration: none !important;
    }

    /* Edit Style */
    .btn-edit-simple {
        background: #f0f4ff;
        color: #4f46e5;
        border-color: #dbeafe;
    }

    .btn-edit-simple:hover {
        background: #4f46e5;
        color: white;
        transform: translateY(-2px);
    }

    /* Delete Style */
    .btn-delete-simple {
        background: #fff5f5;
        color: #e53e3e;
        border-color: #feb2b2;
    }

    .btn-delete-simple:hover {
        background: #e53e3e;
        color: white;
        transform: translateY(-2px);
    }

    /* Baki existing styles (Luxury Header, Table, etc.) waisi hi rahegi */
    .luxury-header { background: white; border-radius: 24px; padding: 40px; margin-bottom: 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.03); border: 1px solid rgba(0,0,0,0.05); display: flex; justify-content: space-between; align-items: center; }
    .luxury-title { font-weight: 800; letter-spacing: -1px; color: var(--luxury-dark); font-size: 2rem; margin: 0; }
    .table-container { background: white; border-radius: 30px; overflow: hidden; box-shadow: 0 20px 40px rgba(0,0,0,0.04); border: 1px solid rgba(0,0,0,0.05); }
    .luxury-table thead th { background: #fafafa; border: none; text-transform: uppercase; font-size: 12px; font-weight: 700; letter-spacing: 1.5px; color: #999; padding: 25px 30px; }
    .luxury-table td { padding: 25px 30px; vertical-align: middle; border-top: 1px solid #f1f1f1; }
    .admin-profile-box { display: flex; align-items: center; gap: 20px; }
    .avatar-wrapper { position: relative; padding: 4px; background: linear-gradient(135deg, #c5a059 0%, #ecd4a4 100%); border-radius: 18px; }
    .admin-img { width: 55px; height: 55px; object-fit: cover; border-radius: 14px; border: 2px solid white; }
    .badge-luxury { background: #f1f5f9; color: #475569; padding: 6px 12px; border-radius: 100px; font-size: 11px; font-weight: 700; }
</style>

<div class="page-wrapper">
    <div class="luxury-header">
        <div>
            <h1 class="luxury-title">System Directory</h1>
            <p class="text-muted mt-2 mb-0">
                <span class="badge badge-pill badge-light p-2 px-3">
                    <strong><%= allAdmin.length %></strong> Active Administrators
                </span>
            </p>
        </div>
        <div class="d-none d-md-block">
            <a href="/addAdminPage" class="btn btn-dark px-4 py-3" style="border-radius: 15px; font-weight: 600;">
                <i class="mdi mdi-plus mr-1"></i> Register New Admin
            </a>
        </div>
    </div>

    <div class="container-fluid p-0">
        <div class="table-container">
            <div class="table-responsive">
                <table class="table luxury-table mb-0">
                    <thead>
                        <tr>
                            <th>Administrative Profile</th>
                            <th>Communication</th>
                            <th>Details</th>
                            <th>Biography</th>
                            <% if(admin.id === "6976069c102d49d78b39326c") { %>
                                <th class="text-right">Management</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% allAdmin.forEach((data) => { %>
                            <tr>
                                <td>
                                    <div class="admin-profile-box">
                                        <div class="avatar-wrapper">
                                            <img src="/<%= data.profile_image %>" class="admin-img" alt="Profile">
                                        </div>
                                        <div>
                                            <div class="font-weight-bold text-dark mb-0" style="font-size: 1.05rem;">
                                                <%= data.fname %> <%= data.lname %>
                                            </div>
                                            <span class="text-muted small">Admin ID: ...<%= data.id.slice(-5) %></span>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="text-dark font-weight-600 mb-1"><%= data.email %></div>
                                    <div class="small text-muted"><i class="mdi mdi-phone-outline"></i> <%= data.phone %></div>
                                </td>

                                <td>
                                    <span class="badge-luxury"><%= data.city %></span>
                                    <div class="mt-2 small text-muted text-capitalize"><%= data.gender %></div>
                                </td>

                                <td>
                                    <p class="text-muted mb-0" style="max-width: 200px; font-size: 13px; line-height: 1.5;">
                                        <%= data.about ? data.about.substring(0, 50) + '...' : 'No bio available.' %>
                                    </p>
                                </td>

                                <% if(admin.id === "6976069c102d49d78b39326c") { %>
                                    <td>
                                        <div class="action-group">
                                            <a href="/editAdmin/<%= data.id %>" class="btn-action-custom btn-edit-simple">
                                                <i class="mdi mdi-pencil-outline"></i> Edit
                                            </a>
                                            
                                            <a href="/deleteAdmin?adminId=<%= data.id %>" 
                                               class="btn-action-custom btn-delete-simple" 
                                               onclick="return confirm('Are you sure you want to remove this admin?')">
                                                <i class="mdi mdi-trash-can-outline"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>