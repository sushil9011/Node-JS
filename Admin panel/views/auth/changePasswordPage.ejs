<%- include('../header') %>

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #0f172a 0%, #334155 100%);
    }

    .pw-wrapper {
        background-color: #f8fafc;
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    /* Compact & Chota Card */
    .pw-card {
        background: white;
        width: 100%;
        max-width: 420px; /* Size chota rakha hai */
        border-radius: 25px;
        padding: 35px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.06);
        border: 1px solid #f1f5f9;
    }

    .icon-box {
        width: 60px;
        height: 60px;
        background: #f8fafc;
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        color: #0f172a;
        font-size: 24px;
        border: 1px solid #e2e8f0;
    }

    .pw-title {
        font-weight: 800;
        color: #1e293b;
        text-align: center;
        font-size: 1.4rem;
        margin-bottom: 5px;
    }

    .pw-subtitle {
        color: #94a3b8;
        font-size: 0.85rem;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Premium Inputs */
    .field-group {
        margin-bottom: 18px;
    }

    .field-label {
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #64748b;
        margin-bottom: 8px;
        display: block;
    }

    .field-input {
        width: 100%;
        padding: 12px 16px;
        background: #f8fafc;
        border: 2px solid #f1f5f9;
        border-radius: 12px;
        font-size: 14px;
        font-weight: 600;
        color: #1e293b;
        transition: 0.3s;
    }

    .field-input:focus {
        background: white;
        border-color: #0f172a;
        outline: none;
        box-shadow: 0 0 0 4px rgba(15, 23, 42, 0.05);
    }

    /* Save Button */
    .btn-save {
        width: 100%;
        padding: 14px;
        background: var(--primary-gradient);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 14px;
        margin-top: 10px;
        transition: 0.3s;
        cursor: pointer;
    }

    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(15, 23, 42, 0.15);
    }

    .back-btn {
        display: block;
        text-align: center;
        margin-top: 20px;
        font-size: 12px;
        font-weight: 700;
        color: #94a3b8;
        text-decoration: none;
        transition: 0.2s;
    }

    .back-btn:hover {
        color: #0f172a;
    }

    hr {
        border: 0;
        border-top: 1px solid #f1f5f9;
        margin: 20px 0;
    }
</style>

<div class="pw-wrapper">
    <div class="pw-card">
        <div class="icon-box">
            <i class="fas fa-shield-halved"></i>
        </div>
        
        <h2 class="pw-title">Change Password</h2>
        <p class="pw-subtitle">Keep your admin account secure</p>

        <form method="post" action="/changePasswordPage">
            
            <div class="field-group">
                <span class="field-label">Current Password</span>
                <input type="password" class="field-input" name="current_psw" placeholder="Enter old password" required>
            </div>

            <hr>

            <div class="field-group">
                <span class="field-label" style="color: #6366f1;">New Password</span>
                <input type="password" class="field-input" name="new_psw" placeholder="Minimum 6 characters" required>
            </div>

            <div class="field-group">
                <span class="field-label" style="color: #6366f1;">Confirm New Password</span>
                <input type="password" class="field-input" name="conform_psw" placeholder="Repeat new password" required>
            </div>

            <button type="submit" class="btn-save">
                Save Changes
            </button>
        </form>

        <a href="/profile" class="back-btn">
            <i class="fas fa-arrow-left me-1"></i> Back to Profile
        </a>
    </div>
</div>

<%- include('../footer') %>