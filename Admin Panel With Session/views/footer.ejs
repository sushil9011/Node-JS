<script>
    document.addEventListener("DOMContentLoaded", () => {
        const currentPath = window.location.pathname;
        
        document.querySelectorAll('.sidebar .nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
                const isSubMenu = link.closest('.collapse');
                if (isSubMenu) {
                    isSubMenu.classList.add('show');
                    // Parent link ko active karne ka asaan tarika
                    const parentBtn = document.querySelector(`[data-bs-target="#${isSubMenu.id}"]`) || 
                                    document.querySelector(`[href="#${isSubMenu.id}"]`);
                    if(parentBtn) {
                        parentBtn.classList.add('active');
                    }
                }
            }
        });
    });
</script>
