<%- include('../header') %>

    <style>
        :root {
            --glass-bg: rgba(255, 255, 255, 0.9);
            --primary-gradient: linear-gradient(135deg, #0f172a 0%, #334155 100%);
            --accent-gold: #c5a059;
        }

        .profile-container {
            background-color: #f8fafc;
            min-height: 100vh;
            padding: 20px 15px;
            /* Reduced mobile padding */
        }

        /* Top Premium Banner */
        .profile-hero {
            background: var(--primary-gradient);
            height: 180px;
            /* Shorter on mobile */
            border-radius: 20px;
            position: relative;
            margin-bottom: 60px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        /* Main Card */
        .profile-main-card {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            margin-top: -100px;
            padding: 30px;
            /* Adjusted padding */
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.05);
        }

        .profile-img-lg {
            width: 140px;
            /* Slightly smaller for mobile */
            height: 140px;
            border-radius: 25px;
            object-fit: cover;
            border: 5px solid #fff;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            background: white;
        }

        .admin-badge {
            background: #e0f2fe;
            color: #0369a1;
            font-weight: 800;
            font-size: 10px;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            padding: 6px 16px;
            border-radius: 100px;
            display: inline-block;
        }

        /* Info Tiles */
        .info-tile {
            background: #fff;
            border: 1px solid #f1f5f9;
            padding: 18px;
            border-radius: 18px;
            transition: 0.3s;
            height: 100%;
        }

        .info-tile:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.03);
        }

        .label-text {
            font-size: 10px;
            font-weight: 700;
            color: #94a3b8;
            text-transform: uppercase;
            margin-bottom: 4px;
        }

        .value-text {
            font-size: 14px;
            font-weight: 700;
            color: #1e293b;
            word-break: break-word;
            /* Long emails won't break layout */
        }

        .edit-btn {
            background: var(--primary-gradient);
            color: white;
            border-radius: 12px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 14px;
            transition: 0.3s;
            border: none;
        }

        .progress-custom {
            height: 8px;
            background: #e2e8f0;
            border-radius: 10px;
        }

        .progress-custom .progress-bar {
            background: var(--primary-gradient);
        }

        /* Desktop vs Mobile Adjustments */
        @media (min-width: 992px) {
            .profile-hero {
                height: 220px;
                border-radius: 30px;
            }

            .profile-img-lg {
                width: 160px;
                height: 160px;
            }

            .border-lg-end {
                border-right: 1px solid #f1f5f9;
            }
        }

        @media (max-width: 991px) {
            .profile-main-card {
                padding: 25px 20px;
            }

            .text-md-start-only {
                text-align: center;
            }

            /* Centers header on mobile */
            .edit-btn {
                width: 100%;
                margin-top: 15px;
            }

            /* Full width button on mobile */
        }
    </style>

    <div class="profile-container">
        <div class="container">
            <div class="profile-hero"></div>

            <div class="row justify-content-center">
                <div class="col-lg-11 col-12">
                    <div class="profile-main-card">
                        <div class="row">
                            <div class="col-lg-4 text-center border-lg-end pr-lg-4 mb-5 mb-lg-0">
                                <div class="mt-n5 position-relative">
                                    <img src="/<%= admin.profile_image %>" class="profile-img-lg mb-3" alt="Admin">
                                </div>
                                <h3 class="fw-bold text-dark mb-1">
                                    <%= admin.fname %>
                                        <%= admin.lname %>
                                </h3>
                                <p class="text-muted small mb-4">
                                    <%= admin.email %>
                                </p>
                                <span class="admin-badge">Premium Administrator</span>

                                <div class="mt-5 text-start px-2">
                                    <h6 class="fw-bold small text-uppercase text-dark mb-2">About Executive</h6>
                                    <p class="text-muted small" style="line-height: 1.6;">
                                        <%= admin.about
                                            || "Executive profile summary is empty. Update your professional biography in settings."
                                            %>
                                    </p>
                                </div>

                                <div class="mt-4 px-2 text-start">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="small fw-bold">Profile Integrity</span>
                                        <span class="small fw-bold text-primary">92%</span>
                                    </div>
                                    <div class="progress progress-custom shadow-sm">
                                        <div class="progress-bar" style="width: 92%"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-8 ps-lg-5">
                                <div
                                    class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5">
                                    <h5 class="fw-bold m-0 text-dark">
                                        <i class="mdi mdi-account-circle-outline me-2 text-primary"></i> Account Details
                                    </h5>
                                    <a href="/editAdmin/<%= admin.id %>" class="btn edit-btn">
                                        <i class="mdi mdi-account-edit-outline me-1"></i> Edit Profile
                                    </a>
                                </div>

                                <div class="row g-3 g-md-4">
                                    <div class="col-sm-6">
                                        <div class="info-tile">
                                            <div class="label-text">Official Designation</div>
                                            <div class="value-text">System Administrator</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="info-tile">
                                            <div class="label-text">Contact Link</div>
                                            <div class="value-text">+91 <%= admin.phone %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="info-tile">
                                            <div class="label-text">Gender / Personal</div>
                                            <div class="value-text text-capitalize">
                                                <%= admin.gender %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="info-tile">
                                            <div class="label-text">Operational Base</div>
                                            <div class="value-text text-capitalize">
                                                <%= admin.city %>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-5">
                                    <h6 class="fw-bold mb-3 text-dark">Security Activity</h6>
                                    <div class="d-flex align-items-center p-3 bg-white border rounded-4 shadow-sm">
                                        <div class="bg-light p-3 rounded-circle me-3">
                                            <i class="bi bi-shield-check text-primary h4 mb-0"></i>
                                        </div>
                                        <div>
                                            <p class="m-0 small fw-bold text-dark"> Verified Last Session</p>
                                            <p class="m-0 extra-small text-muted">Active now â€¢ Security Protocol Active
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-5 pt-4 text-center border-top">
                                    <a href="/change-password"
                                        class="text-secondary small fw-bold text-decoration-none hover-link">
                                        <i class="mdi mdi-lock-outline me-1"></i> Update Authentication Password
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .extra-small {
            font-size: 11px;
        }

        .mt-n5 {
            margin-top: -85px !important;
        }

        .hover-link:hover {
            color: #0f172a !important;
            text-decoration: underline !important;
        }
    </style>

    <%- include('../footer') %>